# Super-Linter Configuration for GitHub Bootstrap Repository
# This file controls which linters are enabled for this repository

# Language-agnostic linters (always enabled in workflow)
# VALIDATE_EDITORCONFIG=true
# VALIDATE_MARKDOWN=true  
# VALIDATE_YAML=true
# VALIDATE_JSON=true
# VALIDATE_XML=true
# VALIDATE_NATURAL_LANGUAGE=true

# Shell and scripting linters
# VALIDATE_BASH=true
# VALIDATE_SHELL_SHFMT=true

# GitHub Actions workflow validation
# VALIDATE_GITHUB_ACTIONS=true

# Additional linters for repository quality
# VALIDATE_JSCPD=true (copy-paste detection)

# Programming language linters (disabled for this bootstrap repo)
ENABLE_JAVASCRIPT=false
ENABLE_TYPESCRIPT=false
ENABLE_PYTHON=false
ENABLE_JAVA=false
ENABLE_GO=false
ENABLE_RUST=false
ENABLE_RUBY=false
ENABLE_PHP=false
ENABLE_CSHARP=false
ENABLE_CPP=false

# Additional Super-Linter Settings
# VALIDATE_ALL_CODEBASE=false (set in workflow)
# FILTER_REGEX_EXCLUDE=.*/(node_modules|vendor|dist|build)/.*
# IGNORE_GITIGNORED_FILES=true
# LOG_LEVEL=NOTICE