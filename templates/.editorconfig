# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Code files: 4 spaces indentation
[*.{java,kt,kts,py,go,rs,cpp,c,h,cs,php,rb}]
indent_style = space
indent_size = 4

# Web/JS/TS: 2 spaces indentation
[*.{js,jsx,ts,tsx,vue}]
indent_style = space
indent_size = 2

# Config files: 2 spaces indentation
[*.{json,yml,yaml,toml,xml,html,css,scss,sass}]
indent_style = space
indent_size = 2

# Shell scripts: 2 spaces
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# Markdown: preserve trailing whitespace
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefiles: tabs required
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab
